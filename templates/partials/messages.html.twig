{% set status_mapping = {'info':'success', 'error': 'negative', 'warning': 'warning'} %}

{% if grav.messages.all %}
    <div id="messages">
        {% for message in grav.messages.fetch %}

            {% set scope = message.scope|e %}
            {% set color = status_mapping[scope] %}

            <div class="ui message notices {{ scope }} {{ color }}"><p>{{ message.message|raw }}</p></div>

        {% endfor %}
    </div>
{% endif %}

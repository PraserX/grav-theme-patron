<!-- Header -->
<header class="modular" style="background-image: url({{ (theme.modules.header.background | first).path }});">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 x">
                <div class="ui menu">
                    {% include 'partials/navigation.html.twig' %}
                </div>
            </div>
        </div>
    </div>

    <!-- Organization name -->
    <div class="organization">
        <h1>{{ site.title }}</h1>
    </div>

    <!-- Organization logo -->
    <img class="main-logo" src="{{ (theme.modules.header.logo | first).path }}" />
</header>